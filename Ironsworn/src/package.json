{
  "name": "ironsworn",
  "version": "2.0.0",
  "description": "Roll20 character sheet for the RPG ironsworn",
  "main": "Ironsworn.html",
  "scripts": {
    "build:pug": "NODE_OPTIONS=--max-old-space-size=8192 pug -w . -o ../dist -P",
    "build:pug:win": "pug -w . -o ../dist -P",
    "build:css": "stylus -w . -o ../dist",
    "lint:pug": "pug-lint",
    "lint:css": "stlint",
    "migrate": "mv ../dist/Ironsworn.html ../Ironsworn.html && mv ../dist/Ironsworn.css ../Ironsworn.css"
  },
  "author": "Ayethin",
  "dependencies": {
    "pug": "2.0.4",
    "pug-cli": "1.0.0-alpha6",
    "pug-lint": "2.6.0",
    "stlint": "1.0.62",
    "stylus": "0.54.7"
  }
}
