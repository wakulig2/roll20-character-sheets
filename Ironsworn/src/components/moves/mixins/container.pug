mixin progressRoll(opts, visibility)
  button(
    type="roll"
    title=opts.title
    name=`roll${opts.name}`
    class=visibility
    value=`&{template:ironsworn_progress} {{header=@{character_name}}} {{progress_name=${opts.title}}} {{progress=[[?{Filled Progress|0}]]}} {{challenge1=[[d10]]}} {{challenge2=[[d10]]}}`
  )

