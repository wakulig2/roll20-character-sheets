mixin oracleTable(oracle, system, key)
  - var header = oracle.name.replace(/_/g, ' ')
  div(class=`${oracle.class}`)
    label.roll-label.embedded-btn Roll Oracle
      button.hide(
        type='roll'
        title=`@{roll_${oracle.id}_oracle}`
        name=`roll_${oracle.id}_oracle`
        value=`&{template:${system}_oracles} {{header=${header}}} {{${key}${oracle.roll_id}=[[${oracle.dice}]]}}`
        )
    .oracle-table 
      each row in oracle.rows
        .oracle-row 
          span.oracle-roll=row.roll
          span.oracle-result!=row.result