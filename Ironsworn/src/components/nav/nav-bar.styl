.sheet-nav-bar
  display flex
  justify-content space-evenly
  margin-top 0.1em
  flex-flow column

.sheet-nav-child
  borderCommon()
  width 100%
  text-align-last center
  margin 0.1em
  label
    margin 0
    padding 0
    cursor pointer
    &:hover
      background #ccc
      transition 0.5s ease

.sheet-page-button-back
  padding 0.1em 0em 0.1em 0em
  font-weight 600

.sheet-page-button
  &:checked
    & ~ div
      &.sheet-page-button-back
        background #4c4d4f
        color #fff
        transition 0.5s ease

.sheet-summary
  margin-top 1em

.sheet-nav-row
  display flex

label.sheet-page-label
  text-align center

div.sheet-optional-nav-sites
  width 0
  margin 0
  border 0
  transition 0.5s ease

input.sheet-optional-nav-sites:checked ~ div.sheet-optional-nav-sites
  show-hide(0.3s)
  width 100%
  borderCommon()
  margin auto
